import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Calculator implements ActionListener {
	
	Font font = new Font("Arial", Font.BOLD, 30);
	
	public Calculator() {
		
		 // 프레임
		 JFrame f = new JFrame("계산기");
		 f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		 f.setSize(420, 550);
		 f.setLayout(null);
		 
		 // 텍스트 필드
		 JTextField t = new JTextField();
		 t.setBounds(50, 25, 300, 50);
		 t. setFont(font);
		 t.setEditable(false);
		 f.add(t);
		 
		 // 버튼
		 JButton[] numb = new JButton[10];
		 JButton[] func = new JButton[8]; // add, sub, mul, div, dec, equ, del, clr;
		 func[0] = new JButton("+");
		 func[1] = new JButton("-");
		 func[2] = new JButton("*");
		 func[3] = new JButton("/");
		 func[4] = new JButton(".");
		 func[5] = new JButton("=");
		 func[6] = new JButton("Del");
		 func[7] = new JButton("C");
		 
		 for(int i = 0; i< 8; i++) {
			 func[i].addActionListener(this);
			 func[i].setFont(font);
			 // func[i].setFocusable(false);
		 }
		 
		 for(int i = 0; i < 10; i++) {
			 numb[i] = new JButton(String.valueOf(i));
			 numb[i].addActionListener(this);
			 numb[i].setFont(font);
			 // numb[i].setFocusable(false);
		 }
		 
		 func[6].setBounds(150, 430, 145, 50); // del
		 func[7].setBounds(50, 430, 95, 50); // clr
		 f.add(func[6]);
		 f.add(func[7]);
		 
		 
		 
		 
		 
		 
		 
		 
	 }
	
	
	
	 public static void main(String[] args) {
		 new Calculator();
	 }	 
	 
		
		 
		 
	 // ActionListener는 버튼 클릭 같은 사용자 동작(이벤트)에 반응하여 특정 작업을 수행하도록 합니다.
	 @Override
	 public void actionPerformed(ActionEvent e) {
		 System.out.println("Button Clicked.");
	 }
		 
		 
	 
}
